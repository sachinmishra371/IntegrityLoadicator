        <Label Content="Temperature Celcius" Grid.Row="4" Height="28" HorizontalAlignment="Left" Margin="3,7,0,0" Name="label5" VerticalAlignment="Top" Grid.Column="3" />
        <TextBox BorderBrush="Black" Height="24" HorizontalAlignment="Left" IsReadOnly="True" Margin="136,6,0,0" Name="txtDen15" Text="" VerticalAlignment="Top" Width="132" Grid.Column="3" Grid.Row="5"  />
