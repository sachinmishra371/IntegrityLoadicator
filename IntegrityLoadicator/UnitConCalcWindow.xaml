        <TextBox  Text="" BorderBrush="Black" Grid.Column="2" Height="24" HorizontalAlignment="Left" Margin="7,6,0,0" Name="txttempFer" VerticalAlignment="Top" Width="132" Grid.Row="4" PreviewTextInput="txtCB_PreviewTextInput" TextChanged="txttempFer_TextChanged" />
